{
  "llm": {
    "openai": { "type": "openai.chat", "baseUrl": "https://api.openai.com/v1", "model": "gpt-4o-mini", "apiKeyEnv": "OPENAI_API_KEY" },
    "google": { "type": "google.gemini", "baseUrl": "https://generativelanguage.googleapis.com", "model": "gemini-1.5-pro", "apiKeyEnv": "GOOGLE_API_KEY" }
  },
  "tts": {
    "kokoro": { "type": "kokoro", "baseUrlEnv": "KOKORO_BASE_URL", "defaultVoice": "af_bella", "format": "mp3" },
    "openai": { "type": "openai.tts", "baseUrl": "https://api.openai.com/v1", "voice": "alloy", "format": "mp3", "apiKeyEnv": "OPENAI_API_KEY" },
    "google": { "type": "google.tts", "baseUrl": "https://texttospeech.googleapis.com", "voice": "pt-BR-Wavenet-A", "format": "mp3", "apiKeyEnv": "GOOGLE_API_KEY" }
  },
  "image": {
    "together": { "type": "together.images", "baseUrl": "https://api.together.xyz/v1", "model": "black-forest-labs/FLUX.1-schnell-Free", "apiKeyEnv": "TOGETHER_API_KEY" },
    "google": { "type": "google.imagen", "baseUrl": "https://generativelanguage.googleapis.com", "model": "imagen-3.0-generate", "apiKeyEnv": "GOOGLE_API_KEY" },
    "fal": { "type": "fal.sd", "baseUrl": "https://fal.run", "model": "flux-schnell", "apiKeyEnv": "FAL_API_KEY" }
  },
  "video": {
    "nca": { "type": "nca.toolkit", "baseUrlEnv": "NCA_BASE_URL", "apiKeyEnv": "NCA_API_KEY" }
  },
  "storage": {
    "baserow": { "type": "baserow", "baseUrlEnv": "BASEROW_BASE_URL", "apiKeyEnv": "BASEROW_TOKEN" },
    "s3": { "type": "s3", "endpointEnv": "S3_ENDPOINT_URL", "bucketEnv": "S3_BUCKET_NAME", "accessEnv": "S3_ACCESS_KEY", "secretEnv": "S3_SECRET_KEY", "regionEnv": "S3_REGION" }
  }
}
