{
  "system": "Segmente a narração em blocos com timestamps relativos (segundos). Responda APENAS JSON.",
  "schema": {
    "type": "object",
    "properties": {
      "segments": {
        "type": "array",
        "items": { "type": "object",
          "properties": {
            "start": { "type": "number" },
            "end": { "type": "number" },
            "text": { "type": "string", "maxLength": 120 }
          },
          "required": ["start","end","text"]
        }
      }
    },
    "required": ["segments"]
  }
}
